{% extends "::base.html.twig" %}

{% block title %}{% trans %}Change My Password{% endtrans %} - Proethos2{% endblock %}

{% block body %}

    <style>
        .card-container.card {
            max-width: 450px;
            padding: 40px 40px;
        }

        /*
         * Card component
         */
        .card {
            background-color: #F7F7F7;
            /* just in case there no content*/
            padding: 20px 25px 30px;
            margin: 0 auto 25px;
            margin-top: 50px;
            /* shadows and rounded borders */
            -moz-border-radius: 2px;
            -webkit-border-radius: 2px;
            border-radius: 2px;
            -moz-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            -webkit-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        }
        h1, h2 {
            text-align: center;
            text-transform: uppercase;
        }
        h2 {
            font-size: 14pt;
            margin-bottom: 40px;
        }
        
    </style>

    <div class="container-fluid">
        <div class="card card-container">
            
            <h1>Pro<b>ethos</b>2</h1>
            <h2>{% trans %}Change my Password{% endtrans %}</h2>

            <form class="form-change-password" action="" method="post">

                <input type="hidden" name="token" value="{{ csrf_token('reset-pass') }}"/>
                
                <div class="form-group">
                    <input type="password" name='new-password' id="newPassword" class="form-control" placeholder="{% trans %}New Password{% endtrans %}" required>
                </div>
                
                <div class="form-group">
                    <input type="password" name='confirm-password' id="confirmPassword" class="form-control" placeholder="{% trans %}Confirm Password{% endtrans %}" required>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">{% trans %}Change Password{% endtrans %}</button>
                </div>
            </form><!-- /form -->
            

        </div><!-- /card-container -->
    </div><!-- /container -->
{% endblock %}
