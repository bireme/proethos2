<form class='form' method="POST" id='form-update-user' action='{{ path("crud_user_profile_update") }}'>

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{% trans %}Update User{% endtrans %}</h4>
    </div>
    <div class="modal-body">
        
        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group required">
                    <label for="input-name">{% trans %}Name{% endtrans %}:</label> 
                    <a href="{{ path("crud_admin_help_show", {help_id: 49} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                    <input type='text' class='form-control' id="input-name" name="name" value="{{ user.name }}" required>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group required">
                    <label for="select-country">{% trans %}Country{% endtrans %}:</label> 
                    <a href="{{ path("crud_admin_help_show", {help_id: 50} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                    <select class='form-control select-select2' id="select-country" name="country" required>
                        <option value="">{% trans %}Select country{% endtrans %}</option>
                        {% for country in countries %}
                            <option value="{{ country.id }}" {% if country == user.country %}selected{% endif %}>{{ country }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-institution">{% trans %}Institution{% endtrans %}:</label> 
                    <a href="{{ path("crud_admin_help_show", {help_id: 51} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                    <input type='text' class='form-control' id="input-institution" name="institution" value="{{ user.institution }}">
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
        <button type="submit" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
    </div>
</form>