{% extends "::base.html.twig" %}

{% block title %}{% trans %}Upload Types{% endtrans %}{% endblock %}

{% block content %}
    
    <div class="container-fluid main-content see-submission">

        <div class="row">
            <div class='col-md-12'>
                <h1 class="page-header">
                    {% trans %}Upload Types{% endtrans %}
                    <a href='#' class='btn btn-primary' data-toggle='modal' data-target='#modal-new-item'>{% trans %}New Upload Type{% endtrans %}</a>
                </h1>
            </div>
        </div>
        
        <div class='block'>
            <div class='row'>
                <div class="col-md-12">
                    <table class='table table-hover table-condensed'>
                        
                        <thead>
                            <tr>
                                <th width="80%">{% trans %}Name{% endtrans %}</th>
                                <th width="">{% trans %}Extensions{% endtrans %}</th>
                                <th width="">{% trans %}Status{% endtrans %}</th>
                                <th>{% trans %}Actions{% endtrans %}</th>
                            </tr>
                        </thead>
                        
                        <tbody>
                            {% for item in items %}
                                {% if item.slug not in ['protocol', 'opinion'] %}
                                    <tr>
                                        <td data-label="{% trans %}Name{% endtrans %}">{{ item.name }}</td>
                                        <td data-label="{% trans %}Extensions{% endtrans %}">{{ item.extensions|join(' ') }}</td>
                                        <td data-label="{% trans %}Status{% endtrans %}">
                                            {% if item.status %}
                                                <span class='label label-success'>{% trans %}active{% endtrans %}</span>
                                            {% else %}
                                                <span class='label label-default'>{% trans %}inactive{% endtrans %}</span>
                                            {% endif %}
                                        </td>
                                        <td data-label="{% trans %}Actions{% endtrans %}">
                                            <a href="{{ path("crud_admin_controlled_list_upload_type_update", {item_id: item.id}) }}" data-toggle="modal" data-target="#modal-ajax-item" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-pencil"></i></a>
                                        </td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <!-- Modal New Upload Type -->
    <div class="modal fade" id="modal-new-item" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="item">
            <div class="modal-content">
                <form enctype="multipart/form-data" class='form' method="POST" id='form-new-item'>
                    <input type="hidden" name="token" value="{{ csrf_token('add-upload-type') }}"/>
                    <input type="hidden" name="MAX_FILE_SIZE" value="{{ 50*1024*1024 }}" />
                    
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">{% trans %}New Upload Type{% endtrans %}</h4>
                    </div>
                    <div class="modal-body">
                        
                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                    <label for="input-name">{% trans %}Name{% endtrans %}:</label> 
                                    <a href="{{ path("crud_admin_help_show", {help_id: 153} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                    <input type='text' class='form-control' id="input-name" name="name" required>
                                </div>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                    <label for="input-name-es_ES">{% trans %}Name in Spanish{% endtrans %}:</label> 
                                    <a href="{{ path("crud_admin_help_show", {help_id: 154} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                    <input type='text' class='form-control' id="input-name-es_ES" name="name-es_ES">
                                </div>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                    <label for="input-name-pt_BR">{% trans %}Name in Portuguese{% endtrans %}:</label> 
                                    <a href="{{ path("crud_admin_help_show", {help_id: 155} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                    <input type='text' class='form-control' id="input-name-pt_BR" name="name-pt_BR">
                                </div>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                    <label for="input-name-fr_FR">{% trans %}Name in French{% endtrans %}:</label> 
                                    <a href="{{ path("crud_admin_help_show", {help_id: 156} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                    <input type='text' class='form-control' id="input-name-fr_FR" name="name-fr_FR">
                                </div>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                    <label for="select-extensions">{% trans %}Extensions{% endtrans %}:</label> 
                                    <a href="{{ path("crud_admin_help_show", {help_id: 157} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                    <select class='form-control select2' id="select-extensions" name="extensions[]" multiple="true" required>
                                        {% for extension in extensions %}
                                            <option value='{{ extension.id }}'>{{ extension.extension }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
                        <button type="submit" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!-- Modal ajax Upload Type -->
    <div class="modal fade" id="modal-ajax-item" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="item">
            <div class="modal-content"></div>
        </div>
    </div>

{% endblock %}

{% block script %}
    <script>
        $(function(){
            
           
        });

        
    </script>
{% endblock %}
