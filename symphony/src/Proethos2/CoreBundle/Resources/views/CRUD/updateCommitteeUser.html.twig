<form class='form' method="POST" id='form-update-user' action='{{ path("crud_committee_user_update", {user_id: user.id}) }}'>

    <input type="hidden" name="token" value="{{ csrf_token('update-user') }}"/>
    <input type="hidden" name="_fragment" value="#user{{ user.id }}"/>

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{% trans %}Update User{% endtrans %}</h4>
    </div>
    <div class="modal-body">

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group required">
                    <label for="input-name">{% trans %}Name{% endtrans %}:</label> 
                    <a href="{{ path("crud_admin_help_show", {help_id: 75} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                    <input type='text' class='form-control' id="input-name" name="name" value="{{ user.name }}" required>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group required">
                    <label for="input-email">{% trans %}Email{% endtrans %}:</label> 
                    <input type='email' class='form-control' id="input-email" name="email" value="{{ user.email }}" required {% if auth_type == 'oauth2' %}disabled{% endif %}>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group required">
                    <label for="select-country">{% trans %}Country{% endtrans %}:</label> 
                    <a href="{{ path("crud_admin_help_show", {help_id: 76} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                    <select class='form-control select-select2' id="select-country" name="country" required>
                        <option value="">{% trans %}Select country{% endtrans %}</option>
                        {% for country in countries %}
                            <option value="{{ country.id }}" {% if country == user.country %}selected{% endif %}>{{ country }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-institution">{% trans %}Institution{% endtrans %}:</label> 
                    <a href="{{ path("crud_admin_help_show", {help_id: 77} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                    <input type='text' class='form-control' id="input-institution" name="institution" value="{{ user.institution }}">
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <div class="checkbox">
                        <label for="input-status">
                            <input type="checkbox" id='input-status' name='status' value="true" {% if user.isActive %}checked{% endif %}> {% trans %}Active?{% endtrans %}
                            <a href="{{ path("crud_admin_help_show", {help_id: 78} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <h5>{% trans %}Roles{% endtrans %}:</h5>
                    {{ app.user.rolesName|join(', ') }}
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
        <button type="submit" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
    </div>
</form>
